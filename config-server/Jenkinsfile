// ============================================================================
// Jenkinsfile SIMPLE para microservicios Spring Boot
// ============================================================================

pipeline {
    agent any

    tools {
        jdk 'java17016'
        maven 'maven399'
    }

    environment {
        SERVICE_NAME = 'config-server'   // ‚öôÔ∏è cambia esto en cada microservicio
        SERVICE_PORT = '8888'
        PROJECT_NAME = 'farmatodo'
    }

    options {
        timestamps()
        timeout(time: 20, unit: 'MINUTES')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                script {
                    echo "üèóÔ∏è Building ${env.SERVICE_NAME}..."
                    sh "mvn clean package -DskipTests=false"
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    echo "üê≥ Building Docker image..."
                    def imageName = "${env.PROJECT_NAME}/${env.SERVICE_NAME}:latest"
                    sh "docker build -t ${imageName} ."
                }
            }
        }
    }

    post {
        always {
            script {
                echo "=========================================="
                echo "Service: ${env.SERVICE_NAME}"
                echo "Status: ${currentBuild.result ?: 'SUCCESS'}"
                echo "Duration: ${currentBuild.durationString}"
                echo "=========================================="
            }

            // Guarda resultados y artefactos
            junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true, fingerprint: true
        }

        success {
            echo "‚úÖ Build succeeded!"
        }

        failure {
            echo "‚ùå Build failed!"
        }
    }
}
