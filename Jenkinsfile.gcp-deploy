                echo "  Token Service:  http://\${VM_EXTERNAL_IP}:8082/api/tokens/health"
                echo "  Product Service: http://\${VM_EXTERNAL_IP}:8083/products/health"
                echo "  Cart Service:   http://\${VM_EXTERNAL_IP}:8084/carts/health"
