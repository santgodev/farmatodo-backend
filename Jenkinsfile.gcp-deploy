                echo "ğŸ“‚ Copiando archivos a la VM..."
                gcloud compute scp docker-compose.prod.yml "$VM_INSTANCE_NAME":~/docker-compose.yml --zone="$ZONE"

                # Ejecutar comandos en la VM
                echo "ğŸš€ Desplegando aplicaciÃ³n en la VM..."
