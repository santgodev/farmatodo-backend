    depends_on:
      config-server:
        condition: service_healthy
      client-service:
        condition: service_started
      token-service:
        condition: service_started
      product-service:
        condition: service_started
      cart-service:
        condition: service_started
      order-service:
        condition: service_started
    networks:
      - farmatodo-network
    restart: unless-stopped

networks:
  farmatodo-network:
    driver: bridge

volumes:
  client-db-data:
  token-db-data:
  product-db-data:
  cart-db-data:
  order-db-data:
